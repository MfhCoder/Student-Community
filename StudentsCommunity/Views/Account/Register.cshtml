@model StudentsCommunity.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 bg-light rounded jumbotron">

            <h2>Please Sign Up <small>It's free and always will be.</small></h2>
            <hr class="colorgraph">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address", @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("UserType", null, "UserType", new { @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control" })
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                    </div>
                </div>
            </div>

            <!-- File Button -->
            @*<div class="input-group">
                    <input type="file" id="files-input-upload" style="display:none">
                    <input type="text" id="fake-file-input-name" disabled="disabled" placeholder="Select photo" class="form-control">
                    <span class="input-group-btn">
                        <button id="fake-file-button-browse" type="button" class="btn btn-default">
                            <span class="fa fa-photo"></span>
                        </button>
                    </span>
                </div>*@

            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                <div class="col-xs-12 col-md-6"><a href="Login" class="btn btn-success btn-block btn-lg">Sign In</a></div>
            </div>

        </div>
    </div>
}

