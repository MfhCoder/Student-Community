@model StudentsCommunity.Models.Team

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form">
        <div class="note">
            <p>Edit Team.</p>
        </div>
        <div class="form-content">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                @Html.HiddenFor(model => model.Id)
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Course Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <button type="submit" value="Create" class="btnSubmit">Submit</button>
        </div>
        @*<a href="@Url.Action("MyTeams", "Teams")" class='btn btn-info btn-xs'>
            <i class="fa fa-arrow-left"></i>
            back
        </a>*@
    </div>
}