
@{
    ViewBag.Title = "AddToTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form">
        <div class="note">
            <p>Add student to Team</p>
        </div>

        <div class="form-content">
            @Html.ValidationMessage("IsStudentRegistered", new { @class = " text-danger" })
            @Html.ValidationMessage("IsInTeam", new { @class = " text-danger" })
            @Html.ValidationMessage("TeamLimit", new { @class = " text-danger" })
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" name="StudentId" class="form-control" placeholder="Student Id" required = "required" />                    </div>
                </div>
                <button type="submit" value="Create" class="btnSubmit">Add</button>
            </div>
        </div>
    </div>
}


